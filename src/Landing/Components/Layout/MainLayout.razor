@inherits LayoutComponentBase
@inject Landing.Services.ScrollService ScrollService

<Landing.Components.Layout.NavMenu />

<main>
    @Body
</main>

<Landing.Components.Layout.FooterSection />

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ScrollService.InitScrollRevealAsync();
            await ScrollService.InitBackToTopAsync();
            await ScrollService.InitPhoneMaskAsync();
        }
    }
}
